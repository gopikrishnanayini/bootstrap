<table class="table table-striped">
  <thead>
    <tr>
      <th> title </th>
      <th> description </th>
      <th> created_at </th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= post.created_at %></td>
        <td><%= link_to "edit", edit_post_path(post),  :class => 'btn.btn-group-lg' %></td>
        <td><%= link_to "show", post_path(post), :class => 'btn.btn-group-lg' %></td>
        <td><%= link_to "destroy", post_path(post), :method => :delete, data: { confirm: "You sure?" } %></td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Post", new_post_path, :class => 'btn.btn-group-lg' %>